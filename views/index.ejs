<script>
 
    //----------------------------------------------------------------------------
        document.getElementById("search_poi").addEventListener("click", ()=> {
        // Read the product type from a text field
        var region = document.getElementById('search').value;
        ajaxSearch(region);
    });
</script>
<div id="map1" class="container-fluid" style="width:100%; height:900px; margin-top:5px;" > </div>

<script>
const map = L.map ("map1");

const attrib="Map data copyright OpenStreetMap contributors, Open Database Licence";

L.tileLayer
        ("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png",
            { attribution: attrib } ).addTo(map);

const pos = [50.908, -1.4];            
map.setView(pos, 10);
L.marker(pos).addTo(map);
</script>  

