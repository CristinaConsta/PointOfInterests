<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container" id="create-user" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header bg-info">
              <h5 class="modal-title text-white">Sign up</h5>
              <a href="/" class="close" data-dismiss="modal" aria-label="close">&times;</a>
            </div>
            <div class="modal-body">
              <form action="/create-user" method=POST>
                <div class="mb-3">
                  <label for="username" class="col-form-label">Username:</label>
                  <input id="username" name="username" type="text" class="form-control">
                  <% if (errors['name']) { %>         
                    <p style="color: red"><%= errors['name'].message %></p> 
                    <% } %>
                </div>
                <div class="mb-3">
                  <label for="emailAdr" class="col-form-label">Email:</label>
                  <input id="emailAdr" name="email" type="email" class="form-control">
                  <% if (errors['email']) { %>         
                    <p style="color: red"><%= errors['email'].message %></p> 
                    <% } %>
                </div>
                <div class="mb-3">
                  <label for="password" class="col-form-label">Password:</label>
                  <input id="password" name="password" type="password" class="form-control">
                  <% if (errors['password']) { %>         
                    <p style="color: red"><%= errors['password'].message %></p> 
                    <% } %>
                </div>
                <div class="mb-3">
                  <small>Already signed up? <a role="button" class="link-primary" href="javascript:history.back()">Login here!</a></small>
                </div>
                <hr>
                <a role="button" id="cancel" type="reset" class="btn btn-danger" href="/">Cancel</a>
                <button id="Register" class="btn btn-info">Register</button>
              </form>
            </div>
          </div>
        </div>
</body>